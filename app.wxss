/* app.wxss */
page {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
  background-color: #f5f5f5;
  color: #333;
  line-height: 1.5;
}

/* 底部导航栏样式 */
.tab-bar {
  background-color: #fff;
  border-top: 1rpx solid #f0f0f0;
  box-shadow: 0 -2rpx 12rpx rgba(0, 0, 0, 0.06);
}

.tab-bar-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100%;
  padding: 16rpx 0;
  transition: all 0.3s ease;
}

.tab-bar-item text {
  font-size: 28rpx;
  font-weight: 500;
  transition: all 0.3s ease;
}

.container {
  padding: 20rpx;
  box-sizing: border-box;
}

.btn {
  display: block;
  width: 100%;
  padding: 30rpx;
  background-color: #07c160;
  color: white;
  text-align: center;
  border-radius: 10rpx;
  font-size: 32rpx;
  margin: 20rpx 0;
  box-sizing: border-box;
}

.btn-disabled {
  background-color: #ccc;
}

.input {
  width: 100%;
  padding: 20rpx;
  border: 2rpx solid #ddd;
  border-radius: 10rpx;
  font-size: 32rpx;
  margin: 20rpx 0;
  box-sizing: border-box;
}

.user-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background-color: white;
  border-radius: 10rpx;
  margin: 10rpx 0;
  box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
}

.score-input {
  width: 150rpx;
  text-align: center;
  border: 2rpx solid #ddd;
  border-radius: 5rpx;
  padding: 10rpx;
  font-size: 28rpx;
}

.history-item {
  background-color: white;
  padding: 20rpx;
  border-radius: 10rpx;
  margin: 10rpx 0;
  box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
}

.result-item {
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
  background-color: white;
  border-radius: 10rpx;
  margin: 10rpx 0;
  box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
}

.positive {
  color: #07c160;
}

.negative {
  color: #ff4d4f;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  margin: 20rpx 0;
  text-align: center;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
  margin: 10rpx 0;
}

.section {
  margin: 30rpx 0;
}

.divider {
  height: 2rpx;
  background-color: #f0f0f0;
  margin: 20rpx 0;
}

.room-info {
  background-color: white;
  padding: 20rpx;
  border-radius: 10rpx;
  margin: 20rpx 0;
  box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
}