/* room.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 头部信息 */
.header {
  background-color: #fff;
  padding: 24rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.header-content {
  flex: 1;
}

.room-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #222;
  margin-bottom: 6rpx;
  display: block;
}

.room-id {
  font-size: 20rpx;
  color: #999;
  display: block;
}

.btn-invite {
  background-color: #1AAD19;
  color: #fff;
  border-radius: 28rpx;
  padding: 14rpx 28rpx;
  font-size: 22rpx;
  min-width: 120rpx;
  text-align: center;
  transition: all 0.3s ease;
}

.btn-invite:hover {
  background-color: #179b16;
  transform: translateY(-1rpx);
}

/* 玩家列表 */
.player-section {
  background-color: #fff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
  overflow: hidden;
}

.player-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
  transition: all 0.2s ease;
}

.player-item:last-child {
  border-bottom: none;
}

.player-item.selected {
  background-color: #f7faff;
}

.player-avatar-container {
  margin-right: 20rpx;
}

.player-avatar {
  width: 68rpx;
  height: 68rpx;
  border-radius: 50%;
  object-fit: cover;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.player-avatar-placeholder {
  width: 68rpx;
  height: 68rpx;
  border-radius: 50%;
  background-color: #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  font-weight: 600;
  color: #999;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.player-name {
  font-size: 26rpx;
  color: #333;
  flex: 1;
  font-weight: 500;
}

.player-score {
  font-size: 34rpx;
  font-weight: 700;
  color: #222;
  min-width: 90rpx;
  text-align: right;
}

/* 计分操作 */
.score-section {
  background-color: #fff;
  padding: 24rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
}

.score-input {
  margin-bottom: 20rpx;
}

.input {
  border: 1rpx solid #e8e8e8;
  border-radius: 10rpx;
  padding: 18rpx;
  font-size: 24rpx;
  width: 100%;
  box-sizing: border-box;
  background-color: #fafafa;
  transition: all 0.3s ease;
}

.input:focus {
  border-color: #1AAD19;
  background-color: #fff;
  box-shadow: 0 0 0 2rpx rgba(26, 173, 25, 0.1);
}

.score-buttons {
  display: flex;
  justify-content: space-between;
  gap: 20rpx;
}

.btn-win, .btn-lose {
  flex: 1;
  height: 88rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
  font-weight: 500;
  transition: all 0.3s ease;
}

.btn-win {
  background-color: #52c41a;
  color: #fff;
}

.btn-win:hover {
  background-color: #47b217;
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 12rpx rgba(82, 196, 26, 0.3);
}

.btn-lose {
  background-color: #ff4d4f;
  color: #fff;
}

.btn-lose:hover {
  background-color: #e64648;
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 12rpx rgba(255, 77, 79, 0.3);
}

/* 历史记录 */
.history-section {
  background-color: #fff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
  overflow: hidden;
}

.history-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
  transition: background-color 0.2s ease;
}

.history-item:last-child {
  border-bottom: none;
}

.history-item:hover {
  background-color: #fafafa;
}

.history-player {
  font-size: 22rpx;
  color: #555;
  flex: 1;
}

.history-score {
  font-size: 24rpx;
  font-weight: 600;
  min-width: 100rpx;
  text-align: right;
}

.positive {
  color: #52c41a;
}

.negative {
  color: #ff4d4f;
}

/* 结算按钮 */
.btn-settle {
  background-color: #1AAD19;
  color: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  font-size: 28rpx;
  margin-top: 20rpx;
  width: 100%;
  font-weight: 600;
  transition: all 0.3s ease;
}

.btn-settle:hover {
  background-color: #179b16;
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 16rpx rgba(26, 173, 25, 0.3);
}

/* 同步状态指示器 */
.sync-status {
  margin-top: 8rpx;
}

.status-text {
  font-size: 18rpx;
  padding: 6rpx 16rpx;
  border-radius: 16rpx;
  display: inline-block;
}

.status-text.loading {
  background-color: #fff2e8;
  color: #fa8c16;
}

.status-text.syncing {
  background-color: #e6f7ff;
  color: #1890ff;
}

.status-text.synced {
  background-color: #f6ffed;
  color: #52c41a;
}

.status-text.idle {
  background-color: #f5f5f5;
  color: #999;
}

/* 快速得分按钮 */
.quick-scores {
  display: flex;
  justify-content: space-between;
  gap: 16rpx;
  margin-bottom: 20rpx;
}

.quick-score-btn {
  flex: 1;
  height: 72rpx;
  border-radius: 10rpx;
  font-size: 24rpx;
  background-color: #f8f8f8;
  color: #333;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
  transition: all 0.3s ease;
  border: 1rpx solid #e8e8e8;
}

.quick-score-btn:hover {
  background-color: #f0f0f0;
  border-color: #d9d9d9;
  transform: translateY(-1rpx);
}

/* 响应式设计 */
@media (max-width: 375px) {
  .container {
    padding: 16rpx;
  }
  
  .player-item {
    padding: 20rpx;
  }
  
  .btn-win, .btn-lose {
    height: 80rpx;
    font-size: 26rpx;
  }
}
