/* result.wxss */
.container {
  padding: 24rpx 16rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
}

.title {
  font-size: 36rpx;
  font-weight: 600;
  text-align: center;
  margin: 40rpx 0;
  color: #333;
}

.result-list {
  margin: 32rpx 0;
}

.result-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  background-color: white;
  border-radius: 12rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
  transition: all 0.2s ease;
}

.result-item:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.player-name {
  font-size: 24rpx;
  font-weight: 600;
  color: #333;
}

.player-score {
  font-size: 28rpx;
  font-weight: 600;
  color: #576b95;
}

.summary {
  background-color: white;
  padding: 24rpx;
  border-radius: 12rpx;
  margin: 32rpx 0;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.summary-title {
  font-size: 24rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
  display: block;
  color: #333;
}

.summary-item {
  display: flex;
  justify-content: space-between;
  padding: 12rpx 0;
  font-size: 22rpx;
  color: #666;
}

.btn {
  display: block;
  width: 100%;
  padding: 24rpx;
  text-align: center;
  border-radius: 12rpx;
  font-size: 24rpx;
  font-weight: 600;
  margin: 16rpx 0;
  box-sizing: border-box;
  transition: all 0.2s ease;
}

.btn-primary {
  background-color: #576b95;
  color: white;
  box-shadow: 0 4rpx 12rpx rgba(87, 107, 149, 0.3);
}

.btn-primary:hover {
  background-color: #4a5a80;
  transform: translateY(-2rpx);
  box-shadow: 0 6rpx 16rpx rgba(87, 107, 149, 0.4);
}

.btn-secondary {
  background-color: #f0f0f0;
  color: #333;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.btn-secondary:hover {
  background-color: #e0e0e0;
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}
