/* result.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.title {
  font-size: 36rpx;
  font-weight: 600;
  text-align: center;
  margin: 40rpx 0;
  color: #333;
}

.result-list {
  margin: 32rpx 0;
}

.result-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background-color: white;
  border-radius: 16rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s ease;
}

.player-avatar-container {
  margin-right: 20rpx;
}

.player-avatar {
  width: 68rpx;
  height: 68rpx;
  border-radius: 50%;
  object-fit: cover;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.player-avatar-placeholder {
  width: 68rpx;
  height: 68rpx;
  border-radius: 50%;
  background-color: #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  font-weight: 600;
  color: #999;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.player-name {
  flex: 1;
  font-size: 26rpx;
  font-weight: 500;
  color: #333;
}

.result-item:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.player-score {
  font-size: 34rpx;
  font-weight: 700;
  color: #1AAD19;
  min-width: 90rpx;
  text-align: right;
}

.summary {
  background-color: white;
  padding: 24rpx;
  border-radius: 16rpx;
  margin: 32rpx 0;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
}

.summary-title {
  font-size: 24rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
  display: block;
  color: #333;
}

.summary-item {
  display: flex;
  justify-content: space-between;
  padding: 12rpx 0;
  font-size: 22rpx;
  color: #666;
}

.btn {
  display: block;
  width: 100%;
  padding: 24rpx;
  text-align: center;
  border-radius: 16rpx;
  font-size: 28rpx;
  font-weight: 600;
  margin: 16rpx 0;
  box-sizing: border-box;
  transition: all 0.3s ease;
}

.btn-primary {
  background-color: #1AAD19;
  color: white;
  box-shadow: 0 2rpx 12rpx rgba(26, 173, 25, 0.1);
}

.btn-primary:hover {
  background-color: #179b16;
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 16rpx rgba(26, 173, 25, 0.3);
}

.btn-secondary {
  background-color: #f0f0f0;
  color: #333;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
}

.btn-secondary:hover {
  background-color: #e0e0e0;
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}
