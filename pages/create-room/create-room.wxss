/* create-room.wxss */
.container {
  padding: 40rpx 20rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  text-align: center;
  margin: 60rpx 0;
  color: #333;
}

.form-group {
  margin: 30rpx 0;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.input {
  width: 100%;
  padding: 20rpx;
  border: 2rpx solid #ddd;
  border-radius: 10rpx;
  font-size: 32rpx;
  box-sizing: border-box;
}

.picker {
  width: 100%;
  padding: 20rpx;
  border: 2rpx solid #ddd;
  border-radius: 10rpx;
  font-size: 32rpx;
  box-sizing: border-box;
}

.picker-text {
  color: #333;
}

.btn {
  display: block;
  width: 100%;
  padding: 30rpx;
  text-align: center;
  border-radius: 10rpx;
  font-size: 32rpx;
  margin: 40rpx 0;
  box-sizing: border-box;
}

.btn-primary {
  background-color: #07c160;
  color: white;
}