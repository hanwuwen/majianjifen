/* history.wxss */
.container {
  padding: 16rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
}

/* 历史记录列表 */
.history-list {
  margin-bottom: 24rpx;
}

.history-item {
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
  overflow: hidden;
  transition: all 0.2s ease;
}

.history-item:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.history-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 20rpx;
  border-bottom: 1rpx solid #f5f5f5;
  background-color: #fafafa;
}

.history-name {
  font-size: 24rpx;
  font-weight: 600;
  color: #333;
  flex: 1;
}

.history-time {
  font-size: 18rpx;
  color: #999;
  white-space: nowrap;
}

.history-players {
  padding: 20rpx;
}

.history-player {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.history-player:last-child {
  border-bottom: none;
}

.player-name {
  font-size: 22rpx;
  color: #666;
  flex: 1;
}

.player-score {
  font-size: 24rpx;
  font-weight: 600;
  color: #333;
  min-width: 80rpx;
  text-align: right;
}

.history-footer {
  padding: 12rpx 20rpx;
  text-align: center;
  background-color: #fafafa;
  border-top: 1rpx solid #f5f5f5;
}

.footer-text {
  font-size: 20rpx;
  color: #666;
}

/* 空状态 */
.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
  text-align: center;
}

.empty-text {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 12rpx;
}

.empty-hint {
  font-size: 20rpx;
  color: #ccc;
  line-height: 1.4;
  margin-bottom: 40rpx;
}

.btn-start {
  display: block;
  width: 200rpx;
  height: 72rpx;
  line-height: 72rpx;
  text-align: center;
  background-color: #576b95;
  color: #fff;
  border-radius: 36rpx;
  font-size: 24rpx;
  font-weight: 600;
  text-decoration: none;
  box-shadow: 0 4rpx 12rpx rgba(87, 107, 149, 0.3);
  transition: all 0.2s ease;
}

.btn-start:hover {
  background-color: #4a5a80;
  transform: translateY(-2rpx);
  box-shadow: 0 6rpx 16rpx rgba(87, 107, 149, 0.4);
}
