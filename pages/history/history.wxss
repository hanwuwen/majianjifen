/* history.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 历史记录列表 */
.history-list {
  margin-bottom: 24rpx;
}

.history-item {
  background-color: #fff;
  border-radius: 16rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
  overflow: hidden;
  transition: all 0.3s ease;
}

.history-item:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.history-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 24rpx;
  border-bottom: 1rpx solid #f5f5f5;
  background-color: #fafafa;
}

.history-name {
  font-size: 24rpx;
  font-weight: 600;
  color: #333;
  flex: 1;
}

.history-time {
  font-size: 18rpx;
  color: #999;
  white-space: nowrap;
}

.history-players {
  padding: 24rpx;
}

.history-player {
  display: flex;
  align-items: center;
  padding: 12rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
  transition: all 0.2s ease;
}

.player-avatar-container {
  margin-right: 20rpx;
}

.player-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  object-fit: cover;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.player-avatar-placeholder {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background-color: #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: 600;
  color: #999;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.history-player:last-child {
  border-bottom: none;
}

.player-name {
  font-size: 24rpx;
  font-weight: 500;
  color: #333;
  flex: 1;
}

.player-score {
  font-size: 28rpx;
  font-weight: 700;
  color: #1AAD19;
  min-width: 90rpx;
  text-align: right;
}

.history-footer {
  padding: 16rpx 24rpx;
  text-align: center;
  background-color: #fafafa;
  border-top: 1rpx solid #f5f5f5;
}

.footer-text {
  font-size: 20rpx;
  color: #666;
}

/* 空状态 */
.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
  text-align: center;
}

.empty-text {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 12rpx;
}

.empty-hint {
  font-size: 20rpx;
  color: #ccc;
  line-height: 1.4;
  margin-bottom: 40rpx;
}

.btn-start {
  display: block;
  width: 240rpx;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  background-color: #1AAD19;
  color: #fff;
  border-radius: 16rpx;
  font-size: 28rpx;
  font-weight: 600;
  text-decoration: none;
  box-shadow: 0 2rpx 12rpx rgba(26, 173, 25, 0.1);
  transition: all 0.3s ease;
}

.btn-start:hover {
  background-color: #179b16;
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 16rpx rgba(26, 173, 25, 0.3);
}
