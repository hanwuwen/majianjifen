/* index.wxss */
.container {
  padding: 40rpx 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  text-align: center;
  margin: 40rpx 0 60rpx 0;
  color: #333;
}

.btn {
  display: block;
  width: 100%;
  max-width: 500rpx;
  padding: 30rpx;
  text-align: center;
  border-radius: 16rpx;
  font-size: 32rpx;
  margin: 20rpx 0;
  box-sizing: border-box;
  transition: all 0.3s ease;
  font-weight: 600;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
}

.btn-primary {
  background-color: #1AAD19;
  color: white;
}

.btn-primary:hover {
  background-color: #179b16;
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 16rpx rgba(26, 173, 25, 0.3);
}

.btn-secondary {
  background-color: #1890ff;
  color: white;
}

.btn-secondary:hover {
  background-color: #177ddc;
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 16rpx rgba(24, 144, 255, 0.3);
}

.btn-tertiary {
  background-color: #f0f0f0;
  color: #333;
  border: 1rpx solid #e8e8e8;
}

.btn-tertiary:hover {
  background-color: #e0e0e0;
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.input {
  width: 100%;
  max-width: 500rpx;
  padding: 24rpx;
  border: 1rpx solid #e8e8e8;
  border-radius: 16rpx;
  font-size: 32rpx;
  margin: 20rpx 0;
  box-sizing: border-box;
  background-color: #fff;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s ease;
}

.input:focus {
  border-color: #1AAD19;
  box-shadow: 0 0 0 2rpx rgba(26, 173, 25, 0.1);
}

.divider {
  font-size: 24rpx;
  color: #999;
  margin: 30rpx 0;
}

.join-section {
  width: 100%;
  max-width: 500rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}