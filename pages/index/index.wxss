/* index.wxss */
.container {
  padding: 40rpx 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  text-align: center;
  margin: 40rpx 0 60rpx 0;
  color: #333;
}

.btn {
  display: block;
  width: 100%;
  max-width: 500rpx;
  padding: 30rpx;
  text-align: center;
  border-radius: 10rpx;
  font-size: 32rpx;
  margin: 20rpx 0;
  box-sizing: border-box;
}

.btn-primary {
  background-color: #07c160;
  color: white;
}

.btn-secondary {
  background-color: #1890ff;
  color: white;
}

.btn-tertiary {
  background-color: #f0f0f0;
  color: #333;
  border: 1rpx solid #ddd;
}

.input {
  width: 100%;
  max-width: 500rpx;
  padding: 20rpx;
  border: 2rpx solid #ddd;
  border-radius: 10rpx;
  font-size: 32rpx;
  margin: 20rpx 0;
  box-sizing: border-box;
}

.divider {
  font-size: 24rpx;
  color: #999;
  margin: 30rpx 0;
}

.join-section {
  width: 100%;
  max-width: 500rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}